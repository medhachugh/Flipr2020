<script>
  $("#form1").click(function(event) {
    event.preventDefault();
    ajaxPost();
  });
  function ajaxPost(){
        var formData = {
           Member1: $("#Member1").val(),
           Member2 : $("#Member2").val(),
          Member3 : $("#Member3").val(),
          Member4 : $("#Member4").val() 
        }
        $.ajax({
        type : "POST",
        contentType : "application/json",
        url :"/team",
        data : JSON.stringify(formData),
        dataType : 'json',
        complete:function()
        {
          alert("error");
        }
      });
      }
</script>
